    <!-- Audit Checklist Search View -->
    <record id="view_audit_checklist_search" model="ir.ui.view">
        <field name="name">audit.checklist.search</field>
        <field name="model">audit.checklist</field>
        <field name="arch" type="xml">
            <search string="Search Audit Checklists">
                <field name="name"/>
                <field name="code"/>
                <field name="version"/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="Archived" name="archived" domain="[('active','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Company" name="group_by_company" context="{'group_by': 'company_id'}"/>
                    <!--                    <filter string="Categories" name="group_by_category" context="{'group_by': 'category_ids'}"/>-->
                </group>
            </search>
        </field>
    </record>

    <!-- Audit Checklist Action -->
    <record id="action_audit_checklists" model="ir.actions.act_window">
        <field name="name">Audit Checklists</field>
        <field name="res_model">audit.checklist</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first audit checklist</p>
            <p>Define checklists to standardize supplier audit questions and ensure consistent evaluations.</p>
        </field>
    </record>

    <!-- Audit Question Categories Action -->
    <record id="action_question_categories" model="ir.actions.act_window">
        <field name="name">Question Categories</field>
        <field name="res_model">audit.question.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first question category
            </p>
            <p>
                Organize audit questions into categories for better structure and reporting.
            </p>
        </field>
    </record>
