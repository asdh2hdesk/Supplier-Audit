    <!-- Supplier Audit Search View -->
    <record id="view_supplier_audit_search" model="ir.ui.view">
        <field name="name">supplier.audit.search</field>
        <field name="model">supplier.audit</field>
        <field name="arch" type="xml">
            <search string="Search Supplier Audits">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="auditor_id"/>
                <field name="audit_date"/>
                <field name="result"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Planned" name="planned" domain="[('state','=','planned')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state','=','in_progress')]"/>
                <filter string="Completed" name="done" domain="[('state','=','done')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state','=','cancelled')]"/>
                <separator/>
                <filter string="This Month" name="this_month"
                        domain="[('audit_date','&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')), ('audit_date','&lt;=', (context_today() + relativedelta(months=1, day=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last Month" name="last_month"
                        domain="[('audit_date','&gt;=', (context_today() + relativedelta(months=-1, day=1)).strftime('%Y-%m-%d')), ('audit_date','&lt;=', (context_today() + relativedelta(day=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Supplier" name="group_by_partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter string="Lead Auditor" name="group_by_auditor" domain="[]"
                            context="{'group_by': 'auditor_id'}"/>
                    <filter string="Status" name="group_by_state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Result" name="group_by_result" domain="[]" context="{'group_by': 'result'}"/>
                    <filter string="Month" name="group_by_month" domain="[]"
                            context="{'group_by': 'audit_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Supplier Audit Calendar View -->
    <record id="view_supplier_audit_calendar" model="ir.ui.view">
        <field name="name">supplier.audit.calendar</field>
        <field name="model">supplier.audit</field>
        <field name="arch" type="xml">
            <calendar string="Supplier Audits" date_start="audit_date" date_stop="end_date" color="state" mode="month">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="auditor_id"/>
            </calendar>
        </field>
    </record>

    <!-- Supplier Audit Pivot View -->
    <record id="view_supplier_audit_pivot" model="ir.ui.view">
        <field name="name">supplier.audit.pivot</field>
        <field name="model">supplier.audit</field>
        <field name="arch" type="xml">
            <pivot string="Supplier Audits">
                <field name="partner_id" type="row"/>
                <field name="audit_date" type="col" interval="month"/>
                <field name="compliance_score" type="measure"/>
                <field name="critical_findings" type="measure"/>
                <field name="major_findings" type="measure"/>
                <field name="minor_findings" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Supplier Audit Graph View -->
    <record id="view_supplier_audit_graph" model="ir.ui.view">
        <field name="name">supplier.audit.graph</field>
        <field name="model">supplier.audit</field>
        <field name="arch" type="xml">
            <graph string="Supplier Audits" type="bar">
                <field name="partner_id"/>
                <field name="compliance_score" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Supplier Audit Action -->
    <record id="action_supplier_audits" model="ir.actions.act_window">
        <field name="name">Supplier Audits</field>
        <field name="res_model">supplier.audit</field>
        <field name="view_mode">tree,form,calendar,pivot,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first supplier audit
            </p>
            <p>
                Create and track supplier audits to ensure compliance with quality standards.
            </p>
        </field>
    </record>
