<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Supplier Audit Tree View -->
    <record id="view_supplier_audit_tree" model="ir.ui.view">
        <field name="name">supplier.audit.tree</field>
        <field name="model">supplier.audit</field>
        <field name="arch" type="xml">
            <tree string="Supplier Audits">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="audit_date"/>
                <field name="auditor_id"/>
                <field name="state"/>
                <field name="compliance_score"/>
                <field name="result"/>
            </tree>
        </field>
    </record>

    <!-- Supplier Audit Form View -->
    <record id="view_supplier_audit_form" model="ir.ui.view">
        <field name="name">supplier.audit.form</field>
        <field name="model">supplier.audit</field>
        <field name="arch" type="xml">
            <form string="Supplier Audit">
                <header>
                    <button name="action_plan" type="object" string="Plan Audit" states="draft" class="oe_highlight"/>
                    <button name="action_start" type="object" string="Start Audit" states="planned"
                            class="oe_highlight"/>
                    <button name="action_complete" type="object" string="Complete Audit" states="in_progress"
                            class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel" states="draft,planned,in_progress"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" states="cancelled"/>
                    <button name="create_finding" type="object" string="Add Finding"
                            context="{'default_audit_id': active_id}" class="btn-primary"
                            attrs="{'invisible': [('state', 'not in', ['in_progress', 'done'])]}"/>
                    <button name="create_corrective_action" type="object" string="Add Corrective Action"
                            context="{'default_audit_id': active_id}"
                            attrs="{'invisible': [('state', 'not in', ['in_progress', 'done'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,planned,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(supplier_audit.action_audit_findings)d" type="action" class="oe_stat_button"
                                icon="fa-exclamation-triangle"
                                context="{'default_audit_id': active_id, 'search_default_audit_id': active_id}">
                            <div class="o_stat_info">
                                <field name="critical_findings" class="o_stat_value"/>
                                <span class="o_stat_text">Critical</span>
                            </div>
                        </button>
                        <button name="%(supplier_audit.action_audit_findings)d" type="action" class="oe_stat_button"
                                icon="fa-warning"
                                context="{'default_audit_id': active_id, 'search_default_audit_id': active_id}">
                            <div class="o_stat_info">
                                <field name="major_findings" class="o_stat_value"/>
                                <span class="o_stat_text">Major</span>
                            </div>
                        </button>
                        <button name="%(supplier_audit.action_audit_findings)d" type="action" class="oe_stat_button"
                                icon="fa-info-circle"
                                context="{'default_audit_id': active_id, 'search_default_audit_id': active_id}">
                            <div class="o_stat_info">
                                <field name="minor_findings" class="o_stat_value"/>
                                <span class="o_stat_text">Minor</span>
                            </div>
                        </button>
                        <button name="%(supplier_audit.action_corrective_actions)d" type="action" class="oe_stat_button"
                                icon="fa-tasks"
                                context="{'default_audit_id': active_id, 'search_default_audit_id': active_id}">
                            <div class="o_stat_info">
                                <field name="open_actions" class="o_stat_value"/>
                                <span class="o_stat_text">Open Actions</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="audit_date"/>
                            <field name="end_date"/>
                            <field name="duration" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="auditor_id"/>
                            <field name="audit_team_ids" widget="many2many_tags"/>
                            <field name="checklist_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="result" attrs="{'invisible': [('state', '!=', 'done')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Audit Questions">
                            <group>
                                <group>
                                    <field name="total_questions" readonly="1"/>
                                    <field name="completed_questions" readonly="1"/>
                                </group>
                                <group>
                                    <field name="completion_rate" readonly="1" widget="progressbar"/>
                                    <field name="compliance_score" readonly="1" widget="percentage"/>
                                </group>
                            </group>
                            <field name="question_line_ids"
                                   attrs="{'readonly': [('state', 'not in', ['in_progress'])]}">
                                <tree string="Questions" editable="bottom" default_order="sequence">
                                    <field name="sequence" widget="handle"/>
                                    <field name="category_id"/>
                                    <field name="name"/>
                                    <field name="question_type"/>
                                    <field name="compliance"
                                           attrs="{'invisible': [('question_type', '!=', 'compliance')]}"/>
                                    <field name="rating" attrs="{'invisible': [('question_type', '!=', 'rating')]}"/>
                                    <field name="text_answer" attrs="{'invisible': [('question_type', '!=', 'text')]}"/>
                                    <field name="evidence"/>
                                    <field name="state"/>
                                    <button name="mark_as_not_applicable" type="object" string="Mark N/A"
                                            icon="fa-ban" attrs="{'invisible': [('state', '=', 'na')]}"/>
                                </tree>
                                <form string="Question">
                                    <group>
                                        <group>
                                            <field name="name"/>
                                            <field name="category_id"/>
                                            <field name="question_type"/>
                                            <field name="weight"/>
                                        </group>
                                        <group>
                                            <field name="compliance"
                                                   attrs="{'invisible': [('question_type', '!=', 'compliance')]}"/>
                                            <field name="rating"
                                                   attrs="{'invisible': [('question_type', '!=', 'rating')]}"/>
                                            <field name="state"/>
                                        </group>
                                    </group>
                                    <group string="Text Answer"
                                           attrs="{'invisible': [('question_type', '!=', 'text')]}">
                                        <field name="text_answer" nolabel="1"/>
                                    </group>
                                    <group string="Evidence/Observations">
                                        <field name="evidence" nolabel="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Findings">
                            <field name="finding_ids">
                                <tree string="Findings">
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="severity"/>
                                    <field name="due_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Corrective Actions">
                            <field name="corrective_action_ids">
                                <tree string="Corrective Actions">
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="action_type"/>
                                    <field name="due_date"/>
                                    <field name="assigned_to"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Add any additional notes about the audit..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Supplier Audit Search View -->
    <record id="view_supplier_audit_search" model="ir.ui.view">
        <field name="name">supplier.audit.search</field>
        <field name="model">supplier.audit</field>
        <field name="arch" type="xml">
            <search string="Search Supplier Audits">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="auditor_id"/>
                <field name="audit_date"/>
                <field name="result"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Planned" name="planned" domain="[('state','=','planned')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state','=','in_progress')]"/>
                <filter string="Completed" name="done" domain="[('state','=','done')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state','=','cancelled')]"/>
                <separator/>
                <filter string="This Month" name="this_month"
                        domain="[('audit_date','&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')), ('audit_date','&lt;=', (context_today() + relativedelta(months=1, day=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last Month" name="last_month"
                        domain="[('audit_date','&gt;=', (context_today() + relativedelta(months=-1, day=1)).strftime('%Y-%m-%d')), ('audit_date','&lt;=', (context_today() + relativedelta(day=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Supplier" name="group_by_partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter string="Lead Auditor" name="group_by_auditor" domain="[]"
                            context="{'group_by': 'auditor_id'}"/>
                    <filter string="Status" name="group_by_state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Result" name="group_by_result" domain="[]" context="{'group_by': 'result'}"/>
                    <filter string="Month" name="group_by_month" domain="[]"
                            context="{'group_by': 'audit_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Supplier Audit Calendar View -->
    <record id="view_supplier_audit_calendar" model="ir.ui.view">
        <field name="name">supplier.audit.calendar</field>
        <field name="model">supplier.audit</field>
        <field name="arch" type="xml">
            <calendar string="Supplier Audits" date_start="audit_date" date_stop="end_date" color="state" mode="month">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="auditor_id"/>
            </calendar>
        </field>
    </record>

    <!-- Supplier Audit Pivot View -->
    <record id="view_supplier_audit_pivot" model="ir.ui.view">
        <field name="name">supplier.audit.pivot</field>
        <field name="model">supplier.audit</field>
        <field name="arch" type="xml">
            <pivot string="Supplier Audits">
                <field name="partner_id" type="row"/>
                <field name="audit_date" type="col" interval="month"/>
                <field name="compliance_score" type="measure"/>
                <field name="critical_findings" type="measure"/>
                <field name="major_findings" type="measure"/>
                <field name="minor_findings" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Supplier Audit Graph View -->
    <record id="view_supplier_audit_graph" model="ir.ui.view">
        <field name="name">supplier.audit.graph</field>
        <field name="model">supplier.audit</field>
        <field name="arch" type="xml">
            <graph string="Supplier Audits" type="bar">
                <field name="partner_id"/>
                <field name="compliance_score" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Supplier Audit Action -->
    <record id="action_supplier_audits" model="ir.actions.act_window">
        <field name="name">Supplier Audits</field>
        <field name="res_model">supplier.audit</field>
        <field name="view_mode">tree,form,calendar,pivot,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first supplier audit
            </p>
            <p>
                Create and track supplier audits to ensure compliance with quality standards.
            </p>
        </field>
    </record>
</odoo>