<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_supplier_audit" model="ir.actions.report">
            <field name="name">Supplier Audit Report</field>
            <field name="model">supplier.audit</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">supplier_audit.supplier_audit_report_template</field>
            <field name="print_report_name">('Supplier Audit - %s' % (object.name))</field>
        </record>
        <record id="action_audit_reports" model="ir.actions.act_window">
            <field name="name">Audit Reports</field>
            <field name="res_model">supplier.audit</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_done': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Generate reports for completed supplier audits.
                </p>
            </field>
        </record>
    </data>
</odoo>